<%= form_for(@picture, url: choose_new_or_edit) do |f| %>
<% if @picture.errors.any? %>
<div id="error_explanation">
<h2><%= @picture.errors.count %>件のエラーがあります。</h2>

<ul>
<% @picture.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
</ul>
</div>
<% end %>

<%= f.label :name %>
<%= f.text_field :name, class: 'form-control' %>
<br>
<%= f.label :pic %>
<%= f.file_field :pic %>
<br>
<%= f.submit '投稿', class: 'btn btn-primary btn-block', style: 'margin-bottom: 20px'  %>
<% end %>

<%= link_to "投稿一覧に戻る", pictures_path, class: 'btn btn-default btn-block', style: 'margin-bottom: 20px' %>
